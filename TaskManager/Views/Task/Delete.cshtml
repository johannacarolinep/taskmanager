@model TaskManager.Models.TaskModel

<h2>Delete Task</h2>

<p>Are you sure you want to delete this task?</p>

<div>
    <strong>Description:</strong> @Model.Description
</div>
<div>
    <strong>Priority:</strong> @Model.Priority
</div>
<div>
    <strong>Status:</strong> @Html.DisplayFor(Model => Model.Status)
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ListId" />
    <input type="hidden" asp-for="Description" />
    <input type="hidden" asp-for="Priority" />
    <input type="hidden" asp-for="Status" />
    <button type="submit" class="btn btn-danger">Confirm Deletion</button>
    <a asp-controller="Tasklist" asp-action="Tasklist" asp-route-listId="@Model.ListId" class="btn btn-secondary">Cancel</a>
</form>

<div asp-validation-summary="All" class="text-danger"></div>

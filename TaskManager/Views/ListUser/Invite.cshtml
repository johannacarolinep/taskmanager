@model TaskManager.ViewModels.InviteUserViewModel

@{
    ViewData["Title"] = "Invite a New Contributor";
    int listId = ViewBag.ListId != null ? (int)ViewBag.ListId : 0;
}

<h2>Invite a New Contributor</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<form method="post" asp-action="Invite">
    <!-- Pass the list ID in a hidden field -->
    <input type="hidden" name="listId" value="@listId" />

    <div class="form-group">
        <label for="email">User Email</label>
        <input type="email" id="email" name="email" class="form-control" required />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="role">Role</label>
        <select id="role" name="role" class="form-control" required>
            <option value="">Select Role</option>
            <option value="Contributor">Contributor</option>
            <option value="Admin">Admin</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Send Invite</button>
    <a asp-controller="Tasklist" asp-action="Tasklist" asp-route-listId="@listId" class="btn btn-secondary">Cancel</a>

    <div asp-validation-summary="All" class="text-danger"></div>
</form>
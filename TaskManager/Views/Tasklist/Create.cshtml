@model TaskManager.Models.TasklistModel

@{
    ViewData["Title"] = "Create tasklist";
}

<h1>Create tasklist</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Title">List Title:</label>
        <input type="text" asp-for="Title" class="form-control" />
        <!-- Display validation message for the Title field -->
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Description:</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <!-- Display validation message for the Description field -->
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <br/>
    <input type="submit" value="Create tasklist" class="btn btn-primary"/>

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
</form>
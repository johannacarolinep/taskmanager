@model IEnumerable<TaskManager.Models.TasklistModel>

@{
    ViewData["Title"] = "My lists";
}

<h1>All of your tasklists</h1>

<p>Logged in users can view all tasklists they are a contributor for, and create new tasklists.
<p>
    <a asp-action="Create">Create New Tasklist</a>
</p>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["ErrorMessage"]
    </div>
}

<!-- Sorting Links -->
<div>
    <a asp-action="Tasklists" asp-route-sortOrder="title" asp-route-searchString="@ViewBag.SearchString" asp-route-filter="@ViewBag.Filter">Sort by Title</a> |
    <a asp-action="Tasklists" asp-route-sortOrder="date" asp-route-searchString="@ViewBag.SearchString" asp-route-filter="@ViewBag.Filter">Sort by Creation Date</a>
</div>

@if (!Model.Any()) {
    <p>No results found</p>
} else {
    @foreach (var tasklist in Model) {
        if (tasklist.IsActive == true) {
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">@tasklist.Title</h5>
                    <p class="card-text">@tasklist.Description</p>
                    <p class="card-text">Created on: @tasklist.CreatedAt.ToShortDateString()</p>
                    <p class="card-text">Role: @tasklist.UserRole</p>

                    <div class="contributors">
                        @if (tasklist.Contributors.Count <= 3) {
                            @foreach (var contributor in tasklist.Contributors) {
                                <img src="@contributor.ProfileImage" alt="@contributor.UserName" height="30" title="@contributor.UserName" />
                            }
                        } else {
                            // Show current user's image first and count remaining
                            var otherContributorsCount = tasklist.Contributors.Count - 1;
                            <img src="@tasklist.Contributors.First().ProfileImage" alt="@tasklist.Contributors.First().UserName" height="30" title="@tasklist.Contributors.First().UserName" />
                            <span class="other-count">+@otherContributorsCount other users</span>
                        }
                    </div>
                    @if (tasklist.UserRole == "Owner" || tasklist.UserRole == "Admin") {
                        <a asp-action="EditList" asp-route-listId="@tasklist.Id">Edit list</a>
                    } 
                    @if (tasklist.UserRole == "Owner") {
                        <a asp-action="Delete" asp-route-listId="@tasklist.Id" class="text-danger">Delete</a>
                    } else {
                        <a asp-controller="ListUser" asp-action="LeaveList" asp-route-listId="@tasklist.Id">Leave tasklist</a>
                    }
                    <a asp-action="Tasklist" asp-route-listId="@tasklist.Id">Open tasklist</a>
                </div>
            </div>
        } else {
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">@tasklist.Title</h5>
                    <p class="card-text">@tasklist.Description</p>
                    <p class="card-text">Created on: @tasklist.CreatedAt.ToShortDateString()</p>
                    <p class="card-text">Role: @tasklist.UserRole</p>

                    <p class="card-text text-danger">This list has been deleted. <a asp-controller="ListUser" asp-action="LeaveList" asp-route-listId="@tasklist.Id">Leave tasklist</a></p>
                </div>
            </div>
        }
    }
}

@if (ViewBag.error != null) {
    <div class="alert alert-danger">
        @ViewBag.error
    </div>
}
@model TaskManager.Models.TasklistModel

@{
    ViewData["Title"] = "Delete Tasklist";
}

<div class="d-flex flex-grow-1 justify-content-center align-items-center">
    <section class="std-container card bg-white shadow-dark p-3 p-lg-4 my-3">
        <h1 class="clr-accent-warm">Delete tasklist <i class="fa-solid fa-clipboard-list"></i></h1>

        <p>Are you sure you want to delete this tasklist?</p>

        <div>
            <strong>Title:</strong> @Model.Title
        </div>
        <div>
            <strong>Description:</strong> @Model.Description
        </div>
        <div>
            <strong>Created At:</strong> @Model.CreatedAt.ToString("g")
        </div>

        <form asp-action="Delete" method="post" class="std-form">
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="Title" />
            <input type="hidden" asp-for="Description" />
            <div class="d-flex justify-content-end gap-2">
                <a asp-controller="Tasklist" asp-action="Tasklists" class="btn link-btn shadow-light">Cancel</a>
                <button type="submit" class="btn btn-red shadow-light">Confirm Deletion</button>
            </div>
        </form>

        <div asp-validation-summary="All" class="text-danger"></div>
    </section>
</div>
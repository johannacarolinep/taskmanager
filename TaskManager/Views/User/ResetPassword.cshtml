@model TaskManager.ViewModels.ResetPasswordViewModel



<div class="d-flex flex-grow-1 justify-content-center align-items-center">
    <section class="std-container card bg-white p-4 p-lg-5 my-3">
        <h1 class="clr-accent-bright">Reset password <i class="fa-solid fa-user-lock"></i></i></h1>
            <form asp-action="ResetPassword" method="post" class="std-form">
                <input type="hidden" asp-for="Token" />
                <input type="hidden" asp-for="Email" />
                @* <div> *@
                    <label asp-for="Password">New password:</label>
                    <input asp-for="Password" />
                    <span asp-validation-for="Password"></span>
                @* </div> *@
                @* <div> *@
                    <label asp-for="ConfirmPassword">Confirm new password:</label>
                    <input asp-for="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword"></span>
                @* </div> *@
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-bright shadow-light">Reset Password</button>
                </div>
            </form>
    </section>
</div>

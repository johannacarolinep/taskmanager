@model TaskManager.ViewModels.ReactivateAccountViewModel

@{
    ViewData["Title"] = "Reactivate Account";
}

<h2>Reactivate Your Account</h2>

@if (TempData["ReactivatePrompt"] != null)
{
    <div class="alert alert-info">
        @TempData["ReactivatePrompt"]
    </div>
}

<form asp-action="ReactivateAccount" method="post">
    <div class="form-group">
        <label>Email or username:</label>
        <input asp-for="EmailOrUsername" class="form-control" />
        <span asp-validation-for="EmailOrUsername" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    
    <button type="submit" class="btn btn-primary">Reactivate Account</button>

    <div asp-validation-summary="All" class="text-danger"></div>
</form>

